<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <SearchView
        android:id="@+id/busqueda"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:iconifiedByDefault="false">
        <requestFocus/>
    </SearchView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/listaDatos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:clipToPadding="false"
        android:overScrollMode="never"
        android:layout_below="@+id/busqueda"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/addActionButton"
        android:layout_width="102dp"
        android:layout_height="290dp"
        android:layout_alignStart="@+id/listaDatos"
        android:layout_alignEnd="@+id/listaDatos"
        android:layout_alignParentTop="true"
        android:layout_marginStart="269dp"
        android:layout_marginTop="383dp"
        android:layout_marginEnd="40dp"
        android:clickable="true"
        android:src="@drawable/matricular"
        app:backgroundTint="#17C9B8" />


</RelativeLayout>


