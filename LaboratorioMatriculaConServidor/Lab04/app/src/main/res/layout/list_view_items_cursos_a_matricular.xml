<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TableLayout
        android:id="@+id/panel1l2"
        android:layout_width="320dp"
        android:layout_height="199dp"
        android:layout_marginTop="10dp">

        <TableRow
            android:id="@+id/rolww1"
            android:layout_width="402dp"
            android:layout_height="67dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp">

            <TextView
                android:id="@+id/nombreCursoGrupo"
                android:layout_width="266dp"
                android:layout_height="61dp"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:textSize="14sp" />
        </TableRow>
        <TableRow
            android:id="@+id/rolww4"
            android:layout_width="402dp"
            android:layout_height="67dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp">
            <TextView
                android:id="@+id/nrcGrupo"
                android:layout_width="102dp"
                android:layout_height="58dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:ems="10"
                android:textSize="14sp" />
        </TableRow>

        <TableRow
            android:id="@+id/rolww2"
            android:layout_width="402dp"
            android:layout_height="67dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp">

            <TextView
                android:id="@+id/horarioGrupo"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:textSize="14sp" />
        </TableRow>

        <TableRow
            android:id="@+id/rolww3"
            android:layout_width="402dp"
            android:layout_height="67dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp">

            <TextView
                android:id="@+id/profesorGrupo"
                android:layout_width="98dp"
                android:layout_height="55dp"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:textSize="14sp" />


        </TableRow>
    </TableLayout>

    <CheckBox
        android:id="@+id/select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="53dp" />
</RelativeLayout>